<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:theme="@style/Oscuro"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp"
        android:background="@color/colorPrimary"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/usuarioTxtInicio"
            android:text="Usuario"
            android:background="@color/colorPrimaryDark"
            android:textAllCaps="true"
            android:textStyle="bold"
            android:textSize="18sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="RealityKings"
        android:textSize="15dp"
        android:gravity="left"
        android:textColor="@color/verde"
        android:layout_weight="2"
        android:id="@+id/nombreClanInicio"
        android:textStyle="bold|italic" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0/0"
            android:gravity="right"
            android:textSize="15dp"
            android:layout_weight="2"
            android:id="@+id/numeroIntegrantesClanInicio"
            />
</LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp"
        android:background="@color/colorPrimary"
        >

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CREAR TORNEO"
            android:padding="10dp"
            android:layout_weight="2"
            android:layout_margin="5dp"
            android:textColor="@android:color/white"
            android:background="@color/azul"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ABANDONAR CLAN"
            android:padding="10dp"
            android:layout_margin="5dp"
            android:layout_weight="2"
            android:textColor="@android:color/white"
            android:background="@color/colorAccent"
            />

        </LinearLayout>



    <ListView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/listaUsuariosClan"
        />

</LinearLayout>